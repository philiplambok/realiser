<div class="card">
  <div class="card-header">
    Create a new setting 
  </div>
  <div class="card-body">
    <%= render 'shared/message' %>

    <%= form_with(model: @setting, url: web_settings_path, method: :post) do |form| %>
      <div class="form-group row">
        <div class="col-6">
          <div class="mb-3">
            <%= form.label :key, class: 'form-label fw-bold' %>
            <%= form.text_field :key, class: 'form-control', autocomplete: 'off' %>
          </div>
        </div>
        <div class="col-6">
          <div class="mb-3">
            <%= form.label :value, class: 'form-label fw-bold' %>
            <%= form.text_field :value, class: 'form-control', autocomplete: 'off' %>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-12">
          <%= form.submit 'Create new setting', class: 'btn btn-primary' %>
          <%= link_to 'Back', root_path, class: 'btn btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

